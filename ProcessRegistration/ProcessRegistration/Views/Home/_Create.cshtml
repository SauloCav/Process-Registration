@model ProcessRegistration.Models.ProcessModel

<form method="post" asp-action="Create">
    <div class="form-group mb-3">
        <label for="Nome" class="form-label">Nome do Processo</label>
        <input type="text" class="form-control" id="Nome" name="Nome" required />
    </div>
    <div class="form-group mb-3">
        <label for="NPU" class="form-label">NPU</label>
        <input type="text" class="form-control" id="NPU" name="NPU"
               placeholder="1111111-11.1111.1.11.1111" required />
    </div>
    <div class="form-group mb-3">
        <label for="UF" class="form-label">UF</label>
        <select class="form-select" id="UF" name="UF" required>
            <option value="">Selecione a UF</option>
            <option value="SP">SP</option>
            <option value="RJ">RJ</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="Municipio" class="form-label">Município</label>
        <input type="text" class="form-control" id="Municipio" name="Municipio" required />
    </div>
    <div class="form-group mb-3">
        <label for="CodigoMunicipio" class="form-label">Código do Município</label>
        <input type="number" class="form-control" id="CodigoMunicipio" name="CodigoMunicipio" required />
    </div>
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>
